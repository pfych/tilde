{
  "name": "tilde",
  "version": "1.0.0",
  "description": "Repo for tilde town site",
  "scripts": {
    "build-scss": "stylelint ./src/style.scss --fix && sass ./src/style.scss ./build/style.css",
    "build-html": "cp ./src/index.html ./build/index.html && cp -r ./src/cruel ./build",
    "build": "yarn run build-scss && yarn run build-html"
  },
  "author": "pfych",
  "license": "ISC",
  "devDependencies": {
    "prettier": "^2.2.1",
    "sass": "^1.32.12",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "selector-max-id": 1,
      "max-nesting-depth": 4,
      "selector-no-qualifying-type": [
        true,
        {
          "ignore": [ "attribute" ]
        }
      ]
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true
  }
}
